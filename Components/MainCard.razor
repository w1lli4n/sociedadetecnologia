@using SociedadeTecnologia.Entities

<MudCard>
    <MudCardMedia Image=@ImagePath Alt="Tecnologias assistivas" Fluid="true" ObjectFit="ObjectFit.Cover"/>
    <MudCardContent>
        <MudText Typo="Typo.h5">@Title</MudText>
        <MudText Typo="Typo.body2">@Lead</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudLink Href=@Path Underline="Underline.None" Color="Color.Secondary" Class="mr-4">Leia mais</MudLink>
        @if(@IsAuthor)
        {
            <MudSpacer />
            <AuthorComponent Author=@Author/>
        }
    </MudCardActions>
</MudCard>

@code
{
    [Parameter]
    public string? Title { get; set; } = "Titulo";
    [Parameter]
    public string? Lead { get; set; } = "Lorem ipsum dolor sit amet consectetur adipisicing elit. Distinctio aliquam adipisci repellat exercitationem amet, nam similique deserunt dolorum quis, modi illo iure perferendis voluptatum fuga voluptatem labore. Dolores, accusamus non.";
    [Parameter]
    public string? Path { get; set ; } = "/artigos/#";
    [Parameter]
    public string? ImagePath { get; set; } = "images/tecnologias-assistivas.jpeg";
    [Parameter]
    public bool IsAuthor { get; set; } = false;
    [Parameter]
    public Author Author { get; set; } = new Author("", "", "");
}