@using SociedadeTecnologia.Components
@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Primary" Dense="true">
        <MudLink Href="/" Underline="Underline.None" Color="Color.Inherit" Class="mr-4">Sociedade e Tecnologia</MudLink>
        <MudLink Href="/artigos" Underline="Underline.None" Color="Color.Inherit" Class="mr-4">Artigos</MudLink>
        <MudLink Href="/sobre" Underline="Underline.None" Color="Color.Inherit" Class="mr-4">Sobre</MudLink>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
        <MudScrollToTop>
            <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.ArrowCircleUp" />
        </MudScrollToTop>
    </MudMainContent>
    <FooterComponent />
</MudLayout>
